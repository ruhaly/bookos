<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 社区影院 -->


    <!-- 社区黄页 -->
    <style name="TextViewWordStyle">
        <item name="android:textColor">#5f5f5f</item>
        <item name="android:textSize">36px</item>
    </style>

    <style name="TextViewTelephoneStyle">
        <item name="android:textColor">#949494</item>
        <item name="android:textSize">24px</item>
    </style>
    <!-- 社区黄页 -->


    <!-- 积分 -->
    <style name="TextViewIntegrationLittleTitleStyle">
        <item name="android:textColor">#5e5f5e</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewIntegrationStyle">
        <item name="android:textColor">#5e5e5e</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextViewIntegrationMyChangeStyle">
        <item name="android:textColor">#5e5e5e</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- 积分 -->


    <!-- 商圈 -->
    <!-- 标题中央文字 -->
    <style name="title_center_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_5f5f5f</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>
    <!-- 标题右侧文字按钮 -->
    <style name="title_right_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">@color/color_Trans</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/color_5f5f5f</item>
        <item name="android:textSize">@dimen/font_size_title</item>
    </style>

    <style name="listview_style">
        <item name="android:cacheColorHint">@color/cacheColorHint</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@color/cacheColorHint</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="view_common_margin">
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginRight">18dp</item>
    </style>

    <style name="gridview_style">
        <item name="android:cacheColorHint">@color/cacheColorHint</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@color/cacheColorHint</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

</resources>